%div
  %ol.breadcrumb
    %li
      =link_to 'HOME', root_path
    - if tournament.category.present?
      %li= tournament.category.category_name
      %li= tournament.category.tag_name
    - else
      %li その他
    %li
      =link_to tournament.title, tournament_path(tournament)

%section
  %h1.title.clearfix
    =tournament.title
    %small @#{tournament.place}
    %small.pull-right= tournament.created_at.strftime("%Y.%m.%d")

  %ul.list-inline
    - tournament.tag_list.each do |tag|
      %li
        %span.label.label-warning= tag
  %p
    =tournament.detail

%ul.nav.nav-tabs.mb-30
  %li{class: (active==1) ? 'active' : ''}
    =link_to 'トーナメント表', tournament_path(tournament)
  %li{class: (active==2) ? 'active' : ''}
    =link_to '対戦表', tournament_games_path(tournament)
  %li{class: (active==3) ? 'active' : ''}
    =link_to 'メンバー表', tournament_players_path(tournament)
  - if tournament.user == current_user
    %li{class: (active==4) ? 'active' : ''}
      =link_to '大会の基本情報', edit_tournament_path(tournament)
