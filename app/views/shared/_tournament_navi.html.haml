%section
  %h1.title.clearfix
    = link_to pretty_tournament_path(tournament, tournament.title) do
      = tournament.title
      %small.text-danger= fa_icon('lock') if tournament.private

    -# 編集ボタン
    .btn-group.pull-right
      %button.btn.btn-primary.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
        編集する
        %span.caret
      %ul.dropdown-menu
        %li= link_to fa_icon('info-circle')+'基本情報の更新', edit_tournament_path(tournament)
        %li= link_to fa_icon('users')+'参加者の更新', tournament_edit_players_path(tournament)
        %li= link_to fa_icon('list-alt')+'試合結果の更新', tournament_edit_games_path(tournament)


%section
  - btn_1_class = (step==1) ? 'btn-primary' : 'btn-default'
  - btn_2_class = (step==2) ? 'btn-primary' : 'btn-default'
  - btn_3_class = (step==3) ? 'btn-primary' : 'btn-default'

  -# PC版
  .visible-md.visible-lg
    = link_to edit_tournament_path(tournament), class: "btn #{btn_1_class} btn-lg" do
      %h4 Step.1
      基本情報の登録
    = fa_icon("arrow-right")
    = link_to tournament_edit_players_path(tournament), class: "btn #{btn_2_class} btn-lg" do
      %h4 Step.2
      参加者の登録
    = fa_icon("arrow-right")
    = link_to tournament_edit_games_path(tournament), class: "btn #{btn_3_class} btn-lg" do
      %h4 Step.3
      試合結果の登録
  -# SP版
  .visible-xs.visible-sm.text-center
    = link_to edit_tournament_path(tournament), class: "btn #{btn_1_class} btn-block" do
      %h5 基本情報の登録
    = fa_icon("caret-down")
    = link_to tournament_edit_players_path(tournament), class: "btn #{btn_2_class} btn-block" do
      %h5 参加者の登録
    = fa_icon("caret-down")
    = link_to tournament_edit_games_path(tournament), class: "btn #{btn_3_class} btn-block" do
      %h5 試合結果の登録
%hr
