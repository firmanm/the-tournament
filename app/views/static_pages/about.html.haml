%section#top
  .row
    %div(style="margin:0 10%;")
      =image_tag("about/logo.png", alt:'THE TOURNAMENT')
      %div.mb-30
        %small= t('.subtitle')
      %p
        =link_to root_path, class: 'btn btn-danger btn-lg' do
          = t('.try_service')

%section#about
  %h1.hide About
  .row
    %div.col-lg-4
      =image_tag("about/about_1.png")
      %h2= t('.about_title_1_html')
      %p= t('.about_text_1_html')
    %div.col-lg-4
