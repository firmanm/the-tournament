%section#top
  .row
    %div(style="margin:0 10%;")
      =image_tag("top-logo.png", alt:'THE TOURNAMENT')
      %div.mb-30
        %small= t('.subtitle')
      %p
        =link_to root_path, class: 'btn btn-danger btn-lg' do
          = t('.try_service')
          %br.visible-xs.visible-sm
          = "(#{t('.free')})"

%section#about
  %h1.hide About
  .row
    %div.col-lg-4
      =image_tag("icon-1.png")
      %h2= t('.about_title_1_html')
      %p= t('.about_text_1_html')
    %div.col-lg-4
      =image_tag("icon-2.png")
      %h2= t('.about_title_2_html')
      %p= t('.about_text_2_html')
    %div.col-lg-4
      =image_tag("icon-3.png")
      %h2= t('.about_title_3_html')
      %p= t('.about_text_3_html')

%section#examples
  %h1
    %span Examples
  .row
    .col-lg-1
    .col-lg-5#tournament
    .col-lg-5
      %h2
        = link_to(tournament_path(@tournament)) do
          = @tournament.title
          %small @#{@tournament.place}
      %p= @tournament.detail
      = link_to sanitize("<i class='fa fa-angle-double-right'></i>")+' この大会の詳細をみる', tournament_path(@tournament), class: 'btn btn-primary'
    .col-lg-1


