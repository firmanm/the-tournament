!!! 5
%html(lang="#{I18n.locale}")
  %head
    = render partial: 'layouts/meta_tags'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'favicon.ico', rel: 'shortcut icon'
    = include_gon
    = javascript_include_tag "application"

  - is_about_page = controller.action_name=='about'
  - is_top_page = controller.action_name=='top'

  %body{id: (is_about_page) ? 'about-page' : ''}
    = render partial: "shared/analytics" if Rails.env.production?
    = render partial: "shared/facebook"

    - nav_partial = (is_about_page) ? 'navbar_about' : 'navbar'
    = render partial: "layouts/#{nav_partial}"

    - if is_about_page
      .container
        .row
          .col-lg-12
            = yield
    - else
      - if is_top_page
        #top-banner.hidden-md.hidden-lg(style="margin-top:-20px;margin-bottom:15px;")
          = image_tag("index-top.png", class: "img-responsive")

      .container
        .row
          .col-lg-9
            = bootstrap_flash
            = yield
          .col-lg-3.hidden-xs.hidden-sm
            = render partial: "layouts/sidebar"

    = render partial: "layouts/footer"
    %script
      (function() {
      var lb = document.createElement('script'); lb.type = 'text/javascript'; lb.async = true;
      lb.src = '//cdn.logbk.net/v1/logbk.min.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(lb, s);
      })();
      var _lbq = _lbq || [];
      _lbq.push(['setTrackingCode', 'KwtBadF2']);
      _lbq.push(['trackSys', '_access']);
