!!! 5
%html(lang="#{I18n.locale}")
  %head
    = render partial: 'layouts/meta_tags'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', rel: 'shortcut icon'
    = include_gon
    = javascript_include_tag "application"


  %body
    = render partial: "shared/analytics" if Rails.env.production?
    = render partial: "shared/facebook"
    = nav_bar responsive: true, brand: image_tag("logo_w.png", alt: "THE TOURNAMENT") do
      %p.navbar-text
        = t '.site_description'
      = menu_group pull: :right do
        = link_to 'http://nanapi.jp/116254/', target:'_blank' do
          %p.navbar-text
            = image_tag("wakaba.png")
            = t '.how_to_use'

    .container
      .row
        .col-lg-9
          = bootstrap_flash
          = yield
        .col-lg-3
          -# Profile
          %section.well.sidebar-nav.text-center
            - if current_user
              =profile_img(current_user)
              %p
                %strong= current_user.try(:email)
                %br
                %small (#{link_to t('.logout'), destroy_user_session_path, method: :delete})
                -# %br
                -# =link_to sanitize("<i class='icon icon-external-link'></i>")+" アイコン画像の設定", 'http://ja.gravatar.com/', target: '_blank'
              = link_to sanitize("<i class='icon icon-plus'></i> ")+ t('.create_tournament'), new_tournament_path, class: 'btn btn-danger btn-block btn-lg'
            - else
              %p
                = image_tag("http://www.gravatar.com/avatar/?d=mm", class: "img-circle")
              = link_to t(".user_registration"), new_user_registration_path, class: 'btn btn-danger btn-block btn-lg'
              %small (#{link_to t('.signin'), new_user_session_path})
          -# Search
          %section
            %h4
              %i.icon.icon-search
              = t('.tournament_search')
            = form_tag('/tournaments', method: :get) do
              .input-group.well
                = text_field_tag(:q, params[:q], class:"form-control", placeholder: t('.search_placeholder'))
                %span.input-group-btn
                  = submit_tag(t(".search"), class:"btn btn-default")
          -# Pick Up
          /
            %section
              %h4
                %i.icon.icon-star
                注目されている大会
              - popular = [3,2]
              %ul.media-list.well
                - popular.each do |i|
                  - tournament = Tournament.find(i)
                  %li.media
                    .media-body
                      %h4.media-heading
                        = link_to "#{tournament.title}", tournament_path(tournament.id), data:{no_turbolink:true}
                      %p= tournament.detail

          -# Category
          %section
            %h4
              %i.icon.icon-tags
              = t('.tag')
            .well
              - tag_cloud(Tournament.tag_counts_on(:tags), %w(css1 css2 css3 css4)) do |tag, css_class|
                = link_to tag.name, tournaments_path(tag: tag.name), class: css_class


    %footer.text-center.well
      .container
        .row
          .col-lg-12
            %div.mb-30
              .fb-like-box(data-href="https://www.facebook.com/the.tournament.jp" data-colorscheme="light" data-show-faces="true" data-header="true" data-stream="true" data-show-border="true")
        %p &copy; THE TOURNAMENT  2014 All Rights Reserved.
