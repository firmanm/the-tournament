!!! 5
%html(lang="ja")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "THE TOURNAMENT"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = include_gon
    = javascript_include_tag "application"


  %body
    = nav_bar responsive: true, brand: image_tag("logo_w.png", alt: "THE TOURNAMENT") do
      %p.navbar-text
        %span.label.label-warning NEW!
        「THE TOURNAMENT」のSuperBETA版をリリースしました！

    .container
      .row
        .col-lg-9
          = bootstrap_flash
          = yield
        .col-lg-3
          -# Profile
          %section.well.sidebar-nav.text-center
            =profile_img(current_user)
            %p
              %strong= current_user.email
              %br
              %small (#{link_to 'ログアウト', root_path})
            = link_to sanitize("<i class='icon icon-plus'></i> ")+"大会の新規作成", new_tournament_path, class: 'btn btn-danger btn-block btn-lg'
          -# Search
          %section
            %h4
              %i.icon.icon-search
              大会検索
            .input-group.well
              %input.form-control(type="text" placeholder="大会名、キーワード")
              %span.input-group-btn
                %button.btn.btn-default(type="button")
                  検索
          -# Category
          %section
            %h4
              %i.icon.icon-star
              注目されている大会
            %ul.media-list.well
              %li.media
                %a.pull-left(href="#")
                  =image_tag("small-4.png")
                .media-body
                  %h4.media-heading 第3回自転車大レース
                  %p 超注目の大会です。
              %li.media
                %a.pull-left(href="#")
                  =image_tag("small-5.png")
                .media-body
                  %h4.media-heading ポケモンカードバトルトーナメント
                  %p 超注目の大会です。
          -# Category
          %section
            %h4
              %i.icon.icon-tags
              カテゴリ・キーワード
            %ul.well
              %li サッカー
              %li 高校
              %li 全国大会
              %li バスケットボール
              %li スポーツ


      %footer.text-center
        %p &copy; THE TOURNAMENT  2014 All Rights Reserved.
