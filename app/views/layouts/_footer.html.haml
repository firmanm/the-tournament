%footer
  /
    - if @rss.present?
      .well
        .container
          .row
            .col-lg-10.col-lg-offset-1
              %div
                %table.table
                  - for i in 0..2 do
                    - item = @rss.items[i]
                    %tr
                      %td
                        =link_to item.link, target:'_blank' do
                          = item.title.force_encoding("utf-8")
                          %small.visible-xs= item.pubDate.strftime("%Y-%m-%d")
                      %td.text-right.hidden-xs
                        %small= item.pubDate.strftime("%Y-%m-%d")

  .black.text-center
    .container
      %p
        Copyright &copy; THE TOURNAMENT  2014-#{Date.today.strftime("%Y")} All Rights Reserved.
      %ul.list-inline
        - unless controller.action_name == 'about'
          %li= link_to t('about_this_site'), "/about", data:{no_turbolink:true}
        %li
          = link_to 'http://nanapi.jp/116254/', target: '_blank' do
            = t 'layouts.application.how_to_use'
        %li= link_to t('official_blog'), 'http://blog.the-tournament.jp/', target: '_blank'
        %li= link_to t('company'), 'http://notsobad.jp/', target: '_blank'
        %li= link_to t('contact'), 'http://goo.gl/forms/xqvYet0AAsQUalI52', target: '_blank'
        %li= link_to t('terms_of_use'), "/terms", target: '_blank'
        %li= link_to t('privacy_policy'), "/privacy", target: '_blank'
