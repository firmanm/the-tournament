=link_to sanitize('<i class="icon-reply"></i> ') + t('back_to_home'), root_path, class: 'btn btn-default'
%section
  %h1.title= t('.signin_title')

%section
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f|
    .form-inputs
      = f.input :email, required: false, autofocus: true
      = f.input :password, required: false
      .col-sm-6.col-sm-offset-2
        = f.input :remember_me, as: :boolean, inline_label: t("devise.remember_me"), label: false if devise_mapping.rememberable?
    .form-actions.col-sm-6.col-sm-offset-2
      %div= f.button :submit, t(".signin_action"), class: 'btn-danger'
      = render "devise/shared/links"
