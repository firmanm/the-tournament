= render partial: "shared/back_to_home"

%section
  %h1.title= t('.signin_title')

%section
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f|
    .form-inputs
      = f.input :email, required: false, autofocus: true
      = f.input :password, required: false
      .col-sm-10.col-sm-offset-2
        = f.input :remember_me, as: :boolean, inline_label: t(".remember_me"), label: false if devise_mapping.rememberable?
    .form-actions.col-sm-10.col-sm-offset-2
      %div.mb-30= f.button :submit, t(".signin_action"), class: 'btn-danger'
      = render "devise/shared/links"
