%hr
- if controller_name != 'sessions'
  %p ※アカウント登録済みの方はこちら
  = link_to t("signin"), new_session_path(resource_name), class: 'btn btn-primary'
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  %p ※まだアカウント登録していない方はこちら
  = link_to t("signup"), new_registration_path(resource_name), class: 'btn btn-primary'
  %br/
