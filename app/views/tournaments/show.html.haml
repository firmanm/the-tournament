= content_for :page_title, @tournament.title
= content_for :keywords, @tournament.title

= render partial: "shared/tournament_info", locals: {tournament:@tournament, active:1}

%section
  %h1.headline
    %i.icon.icon-trophy
    = t('.tournament_bracket')
  %ul.list-inline
    %li#like-button
      .fb-like(data-width="120" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false")
    %li
      %a(href="https://twitter.com/share" class="twitter-share-button" data-text="#{@tournament.title} | #{t('site_description')}" data-hashtags="the-tournament") Tweet
      %script
        !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');

  .row.mb-30
    #tournament.col-lg-12

  %div
    %a#download_btn.btn.btn-sm.btn-default(href="#" download="#{@tournament.title.gsub(' ','-')}" data-loading-text="#{t('.download_preparing')}")
      %i.icon.icon-download-alt
      = t('.download_image')
