!!! 5
%html(lang="#{I18n.locale}")
  %head
    = render partial: 'layouts/meta_tags'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'favicon.ico', rel: 'shortcut icon'
    = include_gon
    = javascript_include_tag "application"
    %meta(name="robots" content="noindex")

  %body
    = render partial: "shared/analytics" if Rails.env.production?
    = render partial: "shared/facebook"
    #emb-container
      #emb-header
        %h1
          = link_to @tournament.title, pretty_tournament_path(@tournament, @tournament.title), target: '_blank'
          %small.text-right
            powered by
            = link_to "THE TOURNAMENT", root_path, target: '_blank'
      #emb-body
        #tournament
        #emb-footer
          %ul.list-inline
            %li.download-btn
              %a#download_btn.btn.btn-sm.btn-default(href="#" download="#{@tournament.title.gsub(' ','-')}" data-loading-text="#{t('.download_preparing')}")
                = fa_icon("download")
                画像ダウンロード

            %li#like-button
              .fb-like(data-width="120" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false")
            %li
              %a(href="https://twitter.com/share" class="twitter-share-button" data-text="#{@tournament.title}のトーナメント表 | #{t('site_description')}" data-hashtags="the-tournament") Tweet
              %script
                !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
