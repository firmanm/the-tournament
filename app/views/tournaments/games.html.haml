= content_for :page_title, "#{@tournament.title} #{t('tournament_menu.games')}"
= content_for :keywords, @tournament.title

- editable = @tournament.user==current_user || current_user.try(:admin?)
= render partial: "shared/tournament_info", locals: {tournament:@tournament, editable: editable}
= render partial: "shared/tournament_menu", locals: {tournament:@tournament, active:2}

%section
  %h1.headline
    = fa_icon("list-alt")
    = t('tournament_menu.games')

  = render partial: "game_list", locals: {tournament:@tournament, editable:false}
